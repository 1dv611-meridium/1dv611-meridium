<section class="section">
    <div class="container">
        <div class="columns">
            {{#if user}}
            <div class="column is-one-third">
                {{#eq schedule.typeOfSetting 0}} {{> updateSettings }} {{/eq}}
                {{#eq schedule.typeOfSetting 1}} {{> updateAdvancedSettings }} {{/eq}}
            </div>
            <div class="column is-two-thirds">
                    <button id="pause" class="pause-state button is-warning{{#if schedule.isPaused}} hidden{{/if}}" data-id="{{schedule._id}}">
                        <span class="icon is-small">
                            <i class="fas fa-pause"></i>
                            <i class="fas fa-spinner fa-pulse hidden"></i>
                            <i class="fas fa-exclamation-triangle hidden"></i>
                        </span>
                        <span>Pausa</span>
                    </button>
                    <button id="start" class="pause-state button is-success{{#unless schedule.isPaused}} hidden{{/unless}}" data-id="{{schedule._id}}">
                        <span class="icon is-small">
                            <i class="fas fa-play"></i>
                            <i class="fas fa-spinner fa-pulse hidden"></i>
                            <i class="fas fa-exclamation-triangle hidden"></i>
                        </span>
                        <span>Starta</span>
                    </button>
                {{> listArchives }}
            </div>
            {{else}}
            <div class="column"></div>
            <div class="column">
                <h1 class="title">Hem</h1>
                <h2 class="subtitle">Ej inloggad</h2>
            </div>
            <div class="column"></div>
            {{/if}}
        </div>
    </div>
</section>