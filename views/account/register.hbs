<script defer src="/js/validate.js"></script>

<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column"></div>

            <div class="column">
                <h1 class="title">Registrera användare</h1>
                <h2 class="subtitle">Ange din email och lösenord</h2>

                <form action="/account/register" method="post">
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="email" required name="email" placeholder="Email" value="{{email}}">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" id="password" required name="password" placeholder="Lösenord"
                                onkeyup="validatePass(); return false;">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" id="passwordConfirm" required name="password" placeholder="Ange ditt lösenord igen"
                                onkeyup="validatePass(); return false;">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <span id="confirmMessage" class="confirmMessage"></span>
                    <br>
                    <br>
                    <div class="field">
                        <p class="control">
                            <button type="submit" class="button is-info" disabled id="submitBtn">
                                <span class="icon is-small">
                                    <i class="fas fa-sign-in-alt"></i>
                                </span>
                                <span>Registrera</span>
                            </button>
                        </p>
                    </div>
                </form>
            </div>

            <div class="column"></div>
        </div>
    </div>
</section>