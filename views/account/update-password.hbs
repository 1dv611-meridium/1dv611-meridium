<div class="columns">
    <div class="column is-4 is-offset-4">
        <h1 class="title">Min profil</h1>
        <h2 class="subtitle">Uppdatera lösenord</h2>
        <form action="" method="post">
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" id="password" name="resetPassword" required placeholder="Ange ditt nya lösenord" onkeyup="validatePass(); return false;">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" id="passwordConfirm" required name="confirmPassword" placeholder="Ange ditt nya lösenord igen"
                        onkeyup="validatePass(); return false;">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <span id="confirmMessage" class="confirmMessage"></span>
            <br>
            <div class="field">
                <div class="control">
                    <button type="submit" class="button is-link" disabled id="submitBtn">
                        <span class="icon is-small">
                            <i class="fas fa-wrench"></i>
                        </span>
                        <span>Uppdatera</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>