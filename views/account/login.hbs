<div class="columns">
    <div class="column is-4 is-offset-4">
        <h1 class="title">Logga in</h1>
        <h2 class="subtitle">Ange din e-post och lösenord</h2>
        <form action="/account/login" method="post">
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="email" required name="email" placeholder="E-post" value="{{email}}">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" required name="password" placeholder="Lösenord">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <a class="help" href="/account/forgot-password">Glömt lösenord?</a>
            <br>
            <div class="field">
                <div class="control">
                    <button type="submit" class="button is-link">
                        <span class="icon is-small">
                            <i class="fas fa-sign-in-alt"></i>
                        </span>
                        <span>Logga in</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>