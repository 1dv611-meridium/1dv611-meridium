<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column"></div>

            <div class="column">
                <h1 class="title">Logga in</h1>
                <h2 class="subtitle">Ange din email och lösenord</h2>

                <form action="/account/login" method="post">
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="email" required name="email" placeholder="Email">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" required name="password" placeholder="Lösenord">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <br>
                    <div class="field">
                        <p class="control">
                            <button type="submit" class="button is-info">
                                <span class="icon is-small">
                                    <i class="fas fa-sign-in-alt"></i>
                                </span>
                                <span>Logga in</span>
                            </button>
                        </p>
                    </div>
                </form>
            </div>

            <div class="column"></div>
        </div>
    </div>
</section>