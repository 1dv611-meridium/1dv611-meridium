<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column"></div>

            <div class="column">
                <h1 class="title">Min profil</h1>
                <h2 class="subtitle">Uppdatera lösenord</h2>

                <form action="" method="post">
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" required name="oldPassword" placeholder="Ange ditt gamla lösenord">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" id="password" required placeholder="Ange ett nytt lösenord"
                                onkeyup="validatePass(); return false;">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="password" id="passwordConfirm" required name="newPassword" placeholder="Ange det nya lösenord igen"
                                onkeyup="validatePass(); return false;">
                            <span class="icon is-small is-left">
                                <i class="fas fa-key"></i>
                            </span>
                        </p>
                    </div>
                    <span id="confirmMessage" class="confirmMessage"></span>
                    <br>
                    <br>
                    <div class="field">
                        <p class="control">
                            <button type="submit" class="button is-info" disabled id="submitBtn">
                                <span class="icon is-small">
                                    <i class="fas fa-wrench"></i>
                                </span>
                                <span>Uppdatera</span>
                            </button>
                        </p>
                    </div>
                </form>
            </div>

            <div class="column"></div>
        </div>
    </div>
</section>