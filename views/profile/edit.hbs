<div class="columns is-centered">
    <div class="column is-4">
        <h3 class="subtitle is-3">Uppdatera lösenord</h3>
        <form method="post">
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" required name="oldPassword" placeholder="Ange ditt gamla lösenord">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" name="newPassword" id="password" required placeholder="Ange ett nytt lösenord" onkeyup="validatePass(); return false;">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <div class="control has-icons-left">
                    <input class="input" type="password" id="passwordConfirm" required name="confirmNewPassword" placeholder="Ange det nya lösenord igen"
                        onkeyup="validatePass(); return false;" onfocus="validatePass(); return false;">
                    <span class="icon is-small is-left">
                        <i class="fas fa-key"></i>
                    </span>
                </div>
            </div>
            <span id="confirmMessage" class="confirmMessage"></span>
            <br>
            <div class="field">
                <div class="control">
                    <button type="submit" class="button is-info" disabled id="submitBtn">
                        <span class="icon is-small">
                            <i class="fas fa-wrench"></i>
                        </span>
                        <span>Uppdatera</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>