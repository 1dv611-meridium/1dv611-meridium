<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column">
                <form action="/archives" method="post">
                    <div class="field">
                        <label class="label">Adress att ladda ner</label>
                        <p class="control has-icons-left">
                            <input class="input" type="url" required name="url" placeholder="Ange din webbadress" value="https://vecka.nu">
                            <span class="icon is-small is-left">
                                <i class="fas fa-link"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <label class="label">Underadress att ladda ner</label>
                        <p class="control has-icons-left">
                            <input class="input" type="url" required name="subUrl" placeholder="Ange din sub-webbadress" value="https://sub.vecka.nu">
                            <span class="icon is-small is-left">
                                <i class="fas fa-link"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <label class="label">Sidor att exkludera</label>
                        <p class="control has-icons-left">
                            <input class="input" type="text" required name="path" placeholder="Ange en sida" value="/fredag">
                            <span class="icon is-small is-left">
                                <i class="fas fa-link"></i>
                            </span>
                        </p>
                    </div>
                    <div class="control">
                        <label class="label">Följ robots.txt och meta-taggar</label>
                        <label class="radio">
                            <input type="radio" name="robots" value="2" checked> Ja
                        </label>
                        <label class="radio">
                            <input type="radio" name="robots" value="1"> Ja, men filter överskrider
                        </label>
                        <label class="radio">
                            <input type="radio" name="robots" value="0"> Nej
                        </label>
                    </div>
                    <div class="field">
                        <label class="label">Sidstruktur</label>
                        <div class="control has-icons-left">
                            <div class="select">
                                <select>
                                    <option value="0">Site-structure (default)</option>
                                    <option value="1">HTML in web/, images/other files in web/images/</option>
                                    <option value="2">HTML in web/HTML, images/other in web/images</option>
                                    <option value="3">HTML in web/, images/other in web/</option>
                                    <option value="4">HTML in web/, images/other in web/xxx, where xxx is the file extension</option>
                                    <option value="5">Images/other in web/xxx and HTML in web/HTML</option>
                                </select>
                                <div class="icon is-small is-left">
                                    <i class="fas fa-folder"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input" type="email" required name="email" placeholder="E-post">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                        <p class="help">Du kommer notifieras när arkiveringen är klar.</p>
                    </div>
                    <div class="field">
                        <p class="control">
                            <button type="submit" class="button is-info">
                                <span class="icon is-small">
                                    <i class="fas fa-cloud-download-alt"></i>
                                </span>
                                <span>Arkivera</span>
                            </button>
                        </p>
                    </div>
                </form>
            </div>
            <div class="column">
                <div class="field">
                    <h3 class="subtitle is-3">Senaste 10 arkiveringar</h3>
                    <p id="recent-list" class="control">
                    </p>
                    <nav class="pagination" role="navigation" aria-label="pagination">
                        <a id="list-previous" class="pagination-previous">Föregående</a>
                        <a id="list-next" class="pagination-next">Nästa</a>
