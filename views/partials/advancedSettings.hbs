<form action="/archives" method="post" id="advancedSettings" style="display:none;">
    <input type="hidden" name="setting" value="1">
    <div class="field">
        <label class="label">Kommando
            <span class="tooltip invisbleButton" disabled data-tooltip="Webbplats och webbplatsens subdomäner som ska arkiveras">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <input class="input" id="advancedSetting" type="text" required name="advancedSetting" placeholder="Kommando">
            <span class="icon is-small is-left">
                <i class="fas fa-code"></i>
            </span>
        </div>
    </div>
    <div class="field">
        <label class="label">Schemaläggning
            <span class="tooltip invisbleButton" disabled data-tooltip="Arkiveringen sker automatiskt vid valda tillfällen">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <div class="select">
                <select name="typeOfSchedule" id="schedule" required>
                    <option selected="selected" value="0">Ingen schemaläggning</option>
                    <option value="1">Varje dag</option>
                    <option value="2">Varje vecka</option>
                    <option value="3">Varje månad</option>
                </select>
                <div class="icon is-small is-left">
                    <i class="far fa-calendar-alt"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="field">
        <label class="label">E-post</label>
        <div class="control has-icons-left">
            <input class="input" type="email" required name="email" placeholder="E-post" value="{{ user.email }}">
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </div>
        <p class="help">Du kommer notifieras när arkiveringen är klar.</p>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button type="submit" name="action" value="0" class="button is-info">
                <span class="icon is-small">
                    <i class="fas fa-cloud-download-alt"></i>
                </span>
                <span>Arkivera</span>
            </button>
            <button type="submit" name="action" value="1" class="button is-success">
                <span class="icon is-small">
                    <i class="fas fa-save"></i>
                </span>
                <span>Spara</span>
            </button>
        </div>
    </div>
</form>