<form action="/archives" method="post" id="settings">
    <input type="hidden" name="setting" value="0">
    <div class="field">
        <label class="label">Huvuddomän att arkivera
            <span class="tooltip invisbleButton" disabled data-tooltip="Webbplats att arkivera">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <input class="input normal" id="url" type="url" required name="url" placeholder="Ange din webbadress" value="https://vecka.nu">
            <span class="icon is-small is-left">
                <i class="fas fa-link"></i>
            </span>
        </div>
    </div>
    <div class="field">
        <label class="label">Subdomän att arkivera
            <span class="tooltip invisbleButton" data-tooltip="Webbplatsens subdomäner">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <input class="input normal" id="includeDomains" type="url" name="includeDomains" placeholder="https://sub.vecka.nu, https://sub2.vecka.nu">
            <span class="icon is-small is-left">
                <i class="fas fa-link"></i>
            </span>
        </div>
    </div>
    <div class="field">
        <label class="label">Sidor att exkludera
            <span class="tooltip invisbleButton" data-tooltip="Sidor som inte ska arkiveras">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <input class="input normal" id="excludePaths" type="text" name="excludePaths" placeholder="/fredag, /torsdag, /onsdag">
            <span class="icon is-small is-left">
                <i class="fas fa-unlink"></i>
            </span>
        </div>
        <div class="field">
            <div class="control">
                <label class="label">Följ robots.txt och meta-taggar
                    <span class="tooltip invisbleButton" data-tooltip="ÄNDRA, Fråga Meridium!!">
                        <i class="far fa-question-circle"></i>
                    </span>
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags0" name="robots" value="0" checked> Ja
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags1" name="robots" value="1"> Ja, men filter överskrider
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags2" name="robots" value="2"> Nej
                </label>
            </div>
        </div>
    </div>
    <div class="field">
        <label class="label">Mappstruktur
            <span class="tooltip invisbleButton" data-tooltip="Arkiveringen sparas i denna struktur">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <div class="select">
                <select name="structure" id="structure">
                    <option selected="selected" id="s0" value="0">Spegla mappstrukturen från källan (standard)</option>
                    <option id="s1" value="1">HTML i /, bilder & övrigt i /images/</option>
                    <option id="s2" value="2">HTML i /HTML/, bilder & övrigt i /images/</option>
                    <option id="s3" value="3">HTML i /, bilder & övrigt i /</option>
                    <option id="s4" value="4">HTML i /, bilder & övrigt i /xxx/ (där xxx är filändelse)</option>
                    <option id="s5" value="5">HTML i /HTML/, bilder & övrigt i /xxx/ (där xxx är filändelse)</option>
                </select>
                <div class="icon is-small is-left">
                    <i class="fas fa-folder"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="field">
        <label class="label">Schemaläggning
            <span class="tooltip invisbleButton" data-tooltip="Arkiveringen sker automatiskt vid valda tillfällen">
                <i class="far fa-question-circle"></i>
            </span>
        </label>
        <div class="control has-icons-left">
            <div class="select">
                <select name="typeOfSchedule" id="schedule">
                    <option selected="selected" value="0">Ingen schemaläggning</option>
                    <option value="1">Varje dag</option>
                    <option value="2">Varje vecka</option>
                    <option value="3">Varje månad</option>
                </select>
                <div class="icon is-small is-left">
                    <i class="far fa-calendar-alt"></i>
                </div>
            </div>
        </div>
        <div class="field">
            <label class="label">E-post</label>
            <div class="control has-icons-left">
                <input class="input" type="email" required name="email" placeholder="E-post" value="{{ user.email }}">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
            <p class="help">Du kommer notifieras när arkiveringen är klar.</p>
        </div>
        <div class="field">
            <div class="control">
                <button type="submit" name="action" value="0" class="button is-info">
                    <span class="icon is-small">
                        <i class="fas fa-cloud-download-alt"></i>
                    </span>
                    <span>Arkivera</span>
                </button>
                <button type="submit" name="action" value="1" class="button is-success">
                    <span class="icon is-small">
                        <i class="fas fa-save"></i>
                    </span>
                    <span>Spara</span>
                </button>
            </div>
        </div>
    </div>
</form>