<div id="confirmScheduleDel" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="box">
            <p class="has-text-weight-bold is-size-5">Vill du verkligen radera denna schemaläggning?</p>
            <br>
            <button class="button is-danger hideModal">
                <span class="icon">
                    <i class="fas fa-times"></i>
                </span>
                <span>Radera</span>
            </button>
            <button class="button hideModal">Avbryt</button>
        </div>
    </div>
</div>

<form action="/schedules" method="post" id="updateSettings">
    <div class="field">
        <label class="label">Huvuddomän att arkivera
            <i class="far fa-question-circle"></i>
        </label>
        <p class="control has-icons-left">
            <input class="input normal" id="url" type="url" required name="url" placeholder="Ange din webbadress" value="{{ schedule.url }}">
            <span class="icon is-small is-left">
                <i class="fas fa-link"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <label class="label">Subdomän att arkivera
            <i class="far fa-question-circle"></i>
        </label>
        <p class="control has-icons-left">
            <input class="input normal" id="includeDomains" type="url" name="includeDomains" placeholder="https://sub.vecka.nu, https://sub2.vecka.nu" value="{{ schedule.includeDomains }}">
            <span class="icon is-small is-left">
                <i class="fas fa-link"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <label class="label">Sidor att exkludera
            <i class="far fa-question-circle"></i>
        </label>
        <p class="control has-icons-left">
            <input class="input normal" id="excludePaths" type="text" name="excludePaths" placeholder="/fredag, /torsdag, /onsdag" value="{{ schedule.excludePaths }}">
            <span class="icon is-small is-left">
                <i class="fas fa-unlink"></i>
            </span>
        </p>
    </div>
    <div class="field">
        <p>
            <div class="control">
                <label class="label">Följ robots.txt och meta-taggar
                    <i class="far fa-question-circle"></i>
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags0" name="robots" value="0" {{#eq schedule.robots 0}}checked{{/eq}}> Ja
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags1" name="robots" value="1" {{#eq schedule.robots 1}}checked{{/eq}}> Ja, men filter överskrider
                </label>
                <label class="radio">
                    <input type="radio" id="metaTags2" name="robots" value="2" {{#eq schedule.robots 2}}checked{{/eq}}> Nej
                </label>
            </div>
        </p>
    </div>
    <div class="field">
        <label class="label">Mappstruktur
            <i class="far fa-question-circle"></i>
        </label>
        <p>
            <div class="control has-icons-left">
                <div class="select">
                    <select name="structure" id="structure" required>
                        <option {{#eq schedule.structure 0}}selected="selected"{{/eq}} name="structure" id="s0" value="0">Spegla mappstrukturen från källan (standard)</option>
                        <option {{#eq schedule.structure 1}}selected="selected"{{/eq}} name="structure" id="s1" value="1">HTML i /, bilder/övrigt i /images/</option>
                        <option {{#eq schedule.structure 2}}selected="selected"{{/eq}} name="structure" id="s2" value="2">HTML i /HTML/, bilder/övrigt i /images/</option>
                        <option {{#eq schedule.structure 3}}selected="selected"{{/eq}} name="structure" id="s3" value="3">HTML i /, bilder/övrigt i /</option>
                        <option {{#eq schedule.structure 4}}selected="selected"{{/eq}} name="structure" id="s4" value="4">HTML i /, bilder/övrigt i /xxx/ (där xxx är filändelse)</option>
                        <option {{#eq schedule.structure 5}}selected="selected"{{/eq}} name="structure" id="s5" value="5">HTML i /HTML/, bilder/övrigt i /xxx/ (där xxx är filändelse)</option>
                    </select>
                    <div class="icon is-small is-left">
                        <i class="fas fa-folder"></i>
                    </div>
                </div>
            </div>
        </p>
    </div>
    <div class="field">
        <label class="label">Schemaläggning
            <i class="far fa-question-circle"></i>
        </label>
        <p>
            <div class="control has-icons-left">
                <div class="select">
                    <select name="schedule" id="schedule" required>
                        <option {{#eq schedule.typeOfSchedule 0}}selected="selected"{{/eq}} name="schedule" id="schedule-option-none" value="0">Ingen schemaläggning</option>                        
                        <option {{#eq schedule.typeOfSchedule 1}}selected="selected"{{/eq}} name="schedule" id="schedule-option-day" value="1">Varje dag</option>
                        <option {{#eq schedule.typeOfSchedule 2}}selected="selected"{{/eq}} name="schedule" id="schedule-option-week" value="2">Varje vecka</option>
                        <option {{#eq schedule.typeOfSchedule 3}}selected="selected"{{/eq}} name="schedule" id="schedule-option-month" value="3">Varje månad</option>
                    </select>
                    <div class="icon is-small is-left">
                        <i class="far fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
        </p>
    </div>
    <div class="field">
        <label class="label">E-post</label>
        <p class="control has-icons-left">
            <input class="input" type="email" required name="email" placeholder="E-post" value="{{ schedule.email }}">
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </p>
        <p class="help">Du kommer notifieras när arkiveringen är klar.</p>
    </div>
    <div class="field">
        <p class="control">
            <a name="action" value="0" class="button is-danger modal-button" data-target="confirmScheduleDel" title="Radera schemaläggning">
                <span class="icon is-small">
                    <i class="fas fa-times"></i>
                </span>
                <span>Radera</span>
            </a>
            <button type="submit" name="action" value="1" class="button is-success">
                <span class="icon is-small">
                    <i class="fas fa-wrench"></i>
                </span>
                <span>Uppdatera</span>
            </button>
        </p>
    </div>
</form>